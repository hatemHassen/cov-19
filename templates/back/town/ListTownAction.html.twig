{% extends 'back/base.html.twig' %}

{% block body %}
    <div class="card shadow mb-4">
        {% include 'flashMessage.html.twig' %}
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">{{ 'town.listTownAction.towns'|trans }}</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for town in towns %}
                        <tr>
                            <td>{{ town.id }}</td>
                            <td>{{ town.name }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="col-lg-8 col-lg-offset-1 well">
                    <a href="{{ path('town_create') }}" class="btn btn-light">{{'town.listTownAction.new'|trans}}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
